                                            <button type="button" id="save1" class="btn btn-primary">Save</button>
                                            <button type="button" id="cancel1"
                                                class="btn cancel  btn-secodary">Cancel</button>
                                        </div>
                                        <div>
                                            <p><a onclick="displayemail()" id="edit2" href="#">Edit</a></p>
                                            <button type="button" id="save2" class="btn btn-primary">Save</button>
                                            <button type="button" id="cancel2"
                                                class="btn  cancel btn-secodary">Cancel</button>
                                        </div>
                                        <div>
                                            <p><a onclick="displayshowdob()" id="edit3" href="#">Edit</a></p>
                                            <button type="button" id="save3" class="btn btn-primary">Save</button>
                                            <button type="button" id="cancel3"
                                                class="btn  cancel btn-secodary">Cancel</button>
                                        </div>
                                        <div>
                                            <p><a onclick="displayshowsalary()" id="edit4" href="#">Edit</a></p>
                                            <button type="button" id="save4" class="btn btn-primary">Save</button>
                                            <button type="button" id="cancel4"
                                                class="btn cancel  btn-secodary">Cancel</button>
                                        </div>
                                        <div>
                                            <p><a onclick="showsubscribe()" id="edit5" href="#">Edit</a></p>
                                            <button type="button" id="save5" class="btn btn-primary">Save</button>
                                            <button type="button" id="cancel5"
                                                class="btn  cancel btn-secodary">Cancel</button>
                                        </div>

                                    </div>

                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="tab-pane fade" id="hide" role="tabpanel" aria-labelledby="hide-tab">
                        <h4>Hide Or Delete Profile</h4>
                        <div class="container mt-5">
                            <div class="row border bg-light">
                                <div class="col-md-4">
                                    <h6 class="text-muted">Hide Profile</h6>
                                </div>
                                <div class="col-md-4">
                                    <p id="hide-profile">Your profile is currently Visible </p>

                                </div>
                                <div class="col-md-4">
                                    <a href="#" id="hi">Hide</a>
                                    <button id="save6" class="btn btn-primary">Save</button>
                                    <button id="cancel6" class="btn btn-secodary">Cancel</button>
                                </div>

                            </div>
                            <div class="row border bg-light">
                                <div class="col-md-4">
                                    <h6 class="text-muted">Delete Profile</h6>
                                </div>
                                <div class="col-md-4" id="delete">
                                    <p id="del-profile">Delete your profile from JodiMaker.com</p>
                                    <input type="hidden" name="id" id="userid" value="{{result._id}}">
                                </div>
                                <div class="col-md-4">
                                    <a class="del" href="#" data-toggle="modal" data-target="#confirm-delete">
                                        Delete</a>
                                </div>
                                <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog"
                                    aria-labelledby="myModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">

                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal"
                                                    aria-hidden="true">&times;</button>
                                                <h4 class="modal-title" id="myModalLabel">Confirm Delete</h4>
                                            </div>

                                            <div class="modal-body">
                                                <p>You are about to delete your Account,this procedure is irreversible.
                                                </p>
                                                <p>Do you want to proceed?</p>
                                            </div>

                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default"
                                                    data-dismiss="modal">Cancel</button>
                                                <a class="btn btn-danger btn-ok">Delete</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
