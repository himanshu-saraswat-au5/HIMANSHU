    <script>
        var showemail = parseInt({{ result.Settings.showemail }})
        $("#display-email .radio").hide()
        $("[name='showemail']").eq(showemail).prop("checked", true);
        $("#display-email p").text($("#display-email .radio").eq(showemail).text())
        var showphone = parseInt({{ result.Settings.showphone }})
        $("#display-phone .radio").hide()
        $("[name='showphone']").eq(showphone).prop("checked", true);
        $("#display-phone p").text($("#display-phone .radio").eq(showphone).text())
        var showsalary = parseInt({{ result.Settings.showsalary }})
        $("#display-showsalary .radio").hide()
        $("[name='showsalary']").eq(showsalary).prop("checked", true);
        $("#display-showsalary p").text($("#display-showsalary .radio").eq(showsalary).text())
        var showdob = parseInt({{ result.Settings.showdob }})
        $("#display-showdob .radio").hide()
        $("[name='showdob']").eq(showdob).prop("checked", true);
        $("#display-showdob p").text($("#display-showdob .radio").eq(showdob).text())
        var subscribe = parseInt({{ result.Settings.subscribe }})
        $("#unsubscribe .radio").hide()
        $("[name='subscribe']").eq(subscribe).prop("checked", true);
        $("#unsubscribe p").text($("#unsubscribe .radio").eq(subscribe).text())
        var emailsubscribe = parseInt({{ result.Settings.emailsubscribe }})
        $("[name='emailsubscribe']").eq(emailsubscribe).prop("checked", true);




    </script>
