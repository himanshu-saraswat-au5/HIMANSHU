                        <form action="/setting" method="post" class="mt-5" id="form">
                            <h4>My Accounts</h4>
                            <div class="form-group ">
                                <label for="email" style="font-size: 20px;">Email :</label>
                                <input type="email" name="email" value="{{result.Signup.email}}"
