                </div>
            </div>
        </nav>
    </section>
    <section>
        <div class="container">
            <div class="col-md-6 mx-auto my-3">
                {{!-- logo --}}
                <div class="row mt-4">
                    <div class="col-md-12 text-center my-4">
                        <a href="#"><img class="logo" src="./img/jodi1.png" alt="logo"></a>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mt-3">Recover Password</h4>
                        <hr>
                        <div class="recoverPassword">
                            {{#if emailNotExists}}
                            <div class="modalbox warning col-md-12 text-center center animate" role="alert">
                                <div class="icon">
                                    <i class="fa fa-exclamation-circle"></i>
                                </div>
                                <h1>Warning!</h1>
                                <p>Email not registered</p>
                                <p><a class="nav-link font-weight-bold homepage" href="/">Register here.</a>
                                </p>
                            </div>
                            {{else if sentEmail}}
                            <div class="modalbox success col-md-12 text-center center animate" role="alert">
                                <div class="icon">
                                    <i class="fa fa-check-circle"></i>
                                </div>
                                <h1>Success!</h1>
                                <p>We've sent a reset link to your e-mail</p>
                                <p>Go back to <a class="nav-link font-weight-bold homepage" href="/">Homepage</a>
                                </p>
                            </div>
                            {{else}}
                            <h6 class="card-subtitle my-3 text-muted">Don't worry, happens to the best of us.</h6>
                            <form action="/forgotpassword" method="post" enctype="application/x-www-form-urlencoded"
                                role="form" class="needs-validation" novalidate>
                                <div class="form-group">
                                    <label for="email" class="font-weight-bold">Your email adress</label>
                                    <input type="email" class="form-control" name="email" id="email"
                                        pattern="[A-Za-z.0-9]{1,64}[A-Za-z0-9]{1,64}[@][A-Za-z]{3,36}[.][A-Za-z]{1,6}"
                                        required>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                    <div class="invalid-feedback">
                                        Enter a valid email
                                    </div>
                                    <div class="mt-3">
                                        <button type="submit" class="btn-block btn btn-outline-info text-center ">email
                                            me a
                                            recovery
                                            link
                                        </button>
                                    </div>
                                </div>
                            </form>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



