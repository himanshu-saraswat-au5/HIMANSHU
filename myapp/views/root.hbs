    <section>
        <!-- Modal -->
        <div class="modal fade" id="register" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content px-4">
                    <div class="modal-header">
                        <h3 class="text-center"><b>Register Your Account</b></h3>

                    </div>
                    <div class="modal-body">
                        <form role="form" class="needs-validation" method="POST" id="signupform" action="/signup"
                            novalidate>
                            <div class="form-group">
                                <label for="email"><span></span> Enter Email</label><span
                                    class="text-danger float-right" id="emailsignupfeed"></span>
                                <input type="text" id="email" name="email" class="form-control"
                                    placeholder="Enter Email"
                                    pattern="[A-Za-z.0-9]{1,64}[A-Za-z0-9]{1,64}[@][A-Za-z]{3,36}[.][A-Za-z]{1,6}"
                                    required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Enter a valid email
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="mobile"><span></span> Enter Mobile Number</label>
                                <input type="text" id="mobile" name="mobile" class="form-control"
                                    placeholder="Enter Mobile No" pattern="0?[6-9][0-9]{9}"
                                    title="Please Enter a number starting from 6-9" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Enter a valid Mobile number
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password"><span></span>
                                    Password</label>
                                <input type="password" id="password" name="password"
                                    pattern="(?=^.{6,20}$)(?=.*\d)(?=.*[a-zA-Z])(?!.*\s).*$" class="form-control"
                                    placeholder="Password" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    At least 6 characters including a number an alphabet.
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="cfpassword"><span></span>
                                    Confirm Password</label>
                                <input type="password" id="cfpassword" name="cfpassword" class="form-control"
                                    placeholder="Confirm Password" required>
                                <div class="valid-feedback">
                                    Passwords match!!
                                </div>
                                <div class="invalid-feedback">
                                    Passwords don't match!!
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="createdBy"><span> </span> Created Profile for:</label>
                                <select class="form-control" name="createdBy">
                                    <option value="self">Self</option>
                                    <option value="son">Son</option>
                                    <option value="daughter">Daughter</option>
                                    <option value="brother">Brother</option>
                                    <option value="sister">Sister</option>
                                    <option value="friend">Friend</option>
                                    <option value="relative">Relative</option>
                                </select>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" value="" checked>Remember me</label>
                            </div>
                            <button type="button" id="submit" class="btn btn-wine btn-block">Register</button>
                        </form>

                    </div>
                  
                    <div class="modal-footer">
                        <p>Already have an Account?
                            <button class="btn btn-infor ml-2" type="button" id="newLogin" data-toggle="modal"
